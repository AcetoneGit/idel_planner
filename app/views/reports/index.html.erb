<div class="container mt-5">
  <h1 class="mb-4 text-center">Relèves</h1>

  <div class="text-center mb-4">
    <%= link_to "Créer un nouveau rapport", new_report_path, class: "btn btn-primary btn-lg" %>
  </div>

    <table class="table table-striped table-hover align-middle">
      <thead class="table-dark">
        <tr>
          <th class="text-center">Période</th>
        </tr>
      </thead>

      <tbody>
        <% @reports.each do |report| %>
          <tr>
            <td class="text-center">
              <%= link_to "Du #{report.start_date.strftime('%d/%m/%Y')} au #{report.end_date.strftime('%d/%m/%Y')}", report_path(report), class: "text-decoration-none text-dark fw-bold" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
</div>
