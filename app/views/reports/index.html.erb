
<div class="container text-center">
  <h1>RELEVES</h1>
</div>

<div class="container">
  <h1>Liste des reports</h1>
  <% @reports.each do |report| %>
    <div class="card mb-3">
      <h5 class="card-title">
        <%= link_to report.text, report_path(report), class: "btn" %>
      </h5>
    </div>
  <% end %>
</div>

<div class="container mt-2 d-flex justify-content-center">
  <%= link_to "Créer une relève", new_report_path, class: "card btn" %>
</div>

<style>
  .btn {
    text-decoration: none;
  }
</style>
