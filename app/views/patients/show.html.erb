<div class="container">
  <div class="row d-flex align-items-center">
    <div class="col-8 col-md-9">
      <div class="d-flex justify-content-between mb-1">
        <p class="fw-bold" style="font-size: 1.2rem; margin-bottom: 0;">
          <%= @patient.last_name %>
        </p>
        <p style="font-size: 1rem; margin-bottom: 0;">
          <%= @patient.date_of_birth %>
        </p>
      </div>
      <p class="fw-bold" style="font-size: 1.2rem; margin-bottom: 0;">
        <%= @patient.first_name %>
      </p>
      <p class="mb-1">
        <%= @patient.social_security_number || "Numéro SS non renseigné" %>
      </p>
      <p class="mb-1">
        <%= @patient.mutual || "Mutuelle non renseignée" %>
      </p>
    </div>
  </div>
</div>

<div class="container p-3">
  <p style="font-size: 0.9rem"><%= @patient.address %></p>
  <div class="bg-primary text-white pt-5 pb-5 mt-3 w-100 rounded-5">
    Map à venir (à dynamiser)
  </div>
</div>

<div class="container p-3">
  <div class="mt-4">
    <h5 class="fw-bold">Informations complémentaires</h5>
    <textarea class="form-control" rows="6" placeholder="résumé du patient (à dynamiser)"></textarea>
  </div>
</div>

<div class="container p-3">
  <div class="mt-4">
    <h5 class="fw-bold">Informations du patient</h5>
    <div class="container p-3">
      <div class="dropdown mb-2">
        <button class="btn btn-primary w-100 text-start dropdown-toggle" type="button" data-bs-toggle="collapse" data-bs-target="#pathologieDropdown" aria-expanded="false">
          Pathologie
        </button>
        <div class="collapse" id="pathologieDropdown">
          <div class="card card-body">
            <% if @patient.pathologies.present? %>
              <% @patient.pathologies.each do |pathology| %>
                <p class="mb-0">• <%= pathology.description %></p>
              <% end %>
            <% else %>
              <p class="text-muted">Aucune pathologie enregistrée.</p>
            <% end %>
          </div>
        </div>
      </div>
<div class="dropdown mb-2">
  <button class="btn btn-primary w-100 text-start dropdown-toggle" type="button" data-bs-toggle="collapse" data-bs-target="#historiqueDropdown" aria-expanded="false">
    Historique des anciens rendez-vous
  </button>
  <div class="collapse" id="historiqueDropdown">
    <div class="card card-body">
      <% if @past_appointments.any? %>
        <% @past_appointments.each do |appointment| %>
          <p class="mb-2"><%= appointment.start_date.strftime('%d/%m/%Y') %> : <%= appointment.reason %></p>
        <% end %>
      <% else %>
        <p class="text-muted">Aucun rendez-vous passé enregistré.</p>
      <% end %>
    </div>
  </div>
</div>

      <div class="dropdown">
        <button class="btn btn-primary w-100 text-start dropdown-toggle" type="button" data-bs-toggle="collapse" data-bs-target="#ordonnancesDropdown" aria-expanded="false">
          Ordonnances
        </button>
        <div class="collapse" id="ordonnancesDropdown">
          <div class="card card-body">
  <%= form_with(model: @patient, url: upload_ordonnance_patient_path(@patient), method: :post, local: true, html: { multipart: true }) do |form| %>
  <div class="mb-3">
    <%= form.label :ordonnances, "Ajouter une ou plusieurs ordonnances", class: "form-label" %>
    <%= form.file_field :ordonnances, multiple: true, class: "form-control" %>
  </div>
  <%= form.submit "Uploader", class: "btn btn-primary" %>
<% end %>
<ul class="mt-3">
  <% if @patient.ordonnances.attached? %>
    <% @patient.ordonnances.each do |ordonnance| %>
      <li>
        <%= link_to ordonnance.filename.to_s, rails_blob_path(ordonnance), target: "_blank", class: "text-primary" %>
        (<%= link_to "Supprimer", destroy_ordonnance_patient_path(id: @patient.id, ordonnance_id: ordonnance.id), method: :delete, data: { turbo_method: :delete, turbo_confirm: "Êtes-vous sûr de vouloir supprimer cette ordonnance ?" }, class: "text-danger" %>)
      </li>
    <% end %>
  <% else %>
    <li>Aucune ordonnance uploadée.</li>
  <% end %>
</ul>

          </div>
        </div>
      </div>
    </div>
  </div>

</div>

<div class="container p-3">
  <h5 class="fw-bold">Notes</h5>
  <div class="list-group">
    <% if @patient.notes.any? %>
      <% @patient.notes.each do |note| %>
        <div class="list-group-item d-flex align-items-center p-3 mt-2 rounded-pill border">
          <img src="https://via.placeholder.com/40" class="rounded-circle me-3" alt="IDEL">
          <span><%= note.text %></span>
        </div>
      <% end %>
    <% else %>
      <div class="list-group-item text-center p-3 mt-3 rounded-pill border">
        Aucune note pour ce patient.
      </div>
    <% end %>
  </div>
  <%= link_to new_patient_note_path(@patient), class: "btn btn-secondary w-100 mt-3 rounded-pill fw-bold" do %>
    Nouvelle note
  <% end %>
  <%= link_to patient_pathologies_path(@patient), class: "btn btn-secondary w-100 mt-3 rounded-pill fw-bold" do %>
    Nouvelle pathologie
  <% end %>
</div>
