<div class="container p-3">
  <p class="address-animate">
    <i class="fas fa-map-marker-alt"></i>
    <span class="address-text"><%= patient.address %></span>
  </p>
  <div class="map-container" data-controller="map" data-map-marker-value="<%= marker.to_json %>"
      data-map-api-key-value="<%= ENV.fetch('MAPBOX_API_KEY') %>"
      data-map-marker-image-url-value="<%= asset_path('seringue.png') %>">
      <%= render 'patients/map_controls' %>
  </div>
</div>
