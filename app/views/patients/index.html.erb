<div class="patients-list">
  <div class="patients-index-header">
    <div class="new-patient-link">
      <%= link_to new_patient_path, class: "btn btn-secondary" do %>
        <i class="fa-solid fa-user-plus"></i>
      <% end %>
    </div>
  </div>

  <div class="container">
    <h1>Liste des Patients</h1>

    <% @patients.order(:last_name, :first_name).each do |patient| %>
      <div class="card mb-2">
        <div class="card-body p-2">
          <div class="d-flex justify-content-between align-items-center">
            <div>
              <%= link_to patient_path(patient), class: "text-decoration-none" do %>
                <h6 class="mb-0"><%= patient.last_name %> <%= patient.first_name %></h6>
              <% end %>
              <small class="text-muted"><%= patient.address %></small>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
