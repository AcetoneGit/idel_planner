<div class="text-center">
  <h1>Mon profil</h1>
</div>

    <div class="d-flex justify-content-center">
      <div class="d-flex justify-content-center align-items-center rounded-circle bg-secondary text-white fw-bold"
        style="width: 80px; height: 80px; font-size: 24px;">
        <span><%= @user.first_name.first %><%= @user.last_name.first %></span>
      </div>
    </div>


    <div id="profile-info">
      <div class="card-body bg-light rounded mt-3 p-3">
        <p><span class="fw-bold">Prénom :</span> <%= @user.first_name %></p>
      </div>
      <div class="card-body bg-light rounded mt-3 p-3">
        <p><span class="fw-bold">Nom :</span> <%= @user.last_name %></p>
      </div>
      <div class="card-body bg-light rounded mt-3 p-3">
        <p><span class="fw-bold">Courrier électronique :</span> <%= @user.email %></p>
      </div>
      <div class="card-body bg-light rounded mt-3 p-3">
        <p><span class="fw-bold">Mot de passe :</span> <%= @user.password %></p>
      </div>
      <div class="text-center mt-3">
        <%= link_to "Modifier mon profil", edit_user_registration_path, class: "btn btn-dark" %>
      </div>
    </div>

  </div>
</div>
