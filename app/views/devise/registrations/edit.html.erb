<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :first_name, label: "Prénom",
                hint: "Laissez-le vide si vous ne souhaitez pas le modifier",
                required: false,
                input_html: { autocomplete: "first-name" } %>
    <%= f.input :last_name, label: "Nom",
                hint: "Laissez-le vide si vous ne souhaitez pas le modifier",
                required: false,
                input_html: { autocomplete: "last-name" } %>
    <%= f.input :email, label: "Adresse électronique", required: true %>
      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <p>En attente de confirmation : <%= resource.unconfirmed_email %></p>
      <% end %>
    <%= f.input :password, label: "Mot de passe",
                hint: "Laissez-le vide si vous ne souhaitez pas le modifier",
                required: false,
                input_html: { autocomplete: "new-password" } %>
    <%= f.input :password_confirmation, label: "Confirmation de mot de passe",
                required: false,
                input_html: { autocomplete: "new-password" } %>
    <%= f.input :current_password, label: "Mot de passe actuel",
                hint: "* Requis pour confirmer les modifications",
                required: true,
                input_html: { autocomplete: "current-password" } %>
    <%= f.input :photo, as: :file %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Actualiser" %>
  </div>
<% end %>

<%= button_to "Supprimer mon compte", registration_path(resource_name), data: { confirm: "Etes-vous sur?", turbo_confirm: "Etes-vous sur ?" }, method: :delete %>

<%= link_to "Retour", :back %>
