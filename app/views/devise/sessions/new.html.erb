<div class="container text-center">
  <h2>Connexion</h2>
</div>

<div class="p-4 w-100" style="max-width: 400px; border-primary; background-color: #cce5ff; margin: 0 auto; border-radius: 10px;">
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  label: "Adresse Ã©lectronique",
                  input_html: { autocomplete: "email" } %>
      <%= f.input :password,
                  required: false,
                  label: "Mot de passe",
                  input_html: { autocomplete: "current-password" } %>
      <%= f.input :remember_me, as: :boolean, label: "Se souvenir de moi" if devise_mapping.rememberable? %>
    </div>
    <div class="form-actions text-center">
      <%= f.button :submit, "Se connecter", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>

<div class="container devise">
  <%= render "devise/shared/links" %>
</div>
